{
  "name": "game-collection-app",
  "version": "1.0.0",
  "description": "A portable desktop game collection manager built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-portable": "electron-builder --win --config.portable.requestExecutionLevel=user --config.nsis.oneClick=false --config.nsis.allowToChangeInstallationDirectory=true",
    "build-portable-zip": "electron-builder --win --config.win.target=zip"
  },
  "keywords": [
    "electron",
    "games",
    "collection",
    "manager",
    "portable"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "express": "^4.21.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.gamecollection.app",
    "productName": "Game Collection Manager",
    "copyright": "Copyright Â© 2025 ${author}",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/*.map",
      "!**/*.ts",
      "!**/*.log",
      "!**/.DS_Store"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "icon": "assets/icon.png",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Game Collection Manager",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "publish": null
  }
}